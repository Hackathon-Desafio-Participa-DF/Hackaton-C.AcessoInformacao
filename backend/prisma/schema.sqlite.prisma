generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Manifestacao {
  id        String   @id @default(uuid())
  protocolo String   @unique
  tipo      String
  orgao     String
  status    String   @default("RECEBIDA")
  anonimo   Boolean  @default(false)

  assunto                   String
  dataFato                  DateTime?
  horarioFato               String?
  local                     String?
  pessoasEnvolvidas         String?
  relato                    String?

  audioUrl  String?

  nome      String?
  email     String?
  telefone  String?

  anexos    Anexo[]
  respostas Resposta[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([protocolo])
  @@index([status])
  @@index([tipo])
  @@index([orgao])
  @@index([createdAt])
}

model Anexo {
  id             String   @id @default(uuid())
  url            String
  tipo           String
  manifestacaoId String
  manifestacao   Manifestacao @relation(fields: [manifestacaoId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([manifestacaoId])
}

model Resposta {
  id             String   @id @default(uuid())
  texto          String
  gestorId       String
  gestor         Gestor   @relation(fields: [gestorId], references: [id])
  manifestacaoId String
  manifestacao   Manifestacao @relation(fields: [manifestacaoId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([manifestacaoId])
  @@index([gestorId])
}

model Gestor {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  senha     String
  orgao     String
  ativo     Boolean  @default(true)

  respostas Resposta[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}
